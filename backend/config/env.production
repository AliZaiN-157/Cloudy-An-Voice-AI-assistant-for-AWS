# Production Environment Configuration
# Update these values for your production deployment

# Application settings
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Gemini Live API settings
GEMINI_API_KEY=your_production_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Database settings
DATABASE_URL=postgresql://user:password@your-db-host:5432/voice_assistant

# Redis settings
REDIS_URL=redis://your-redis-host:6379

# Authentication settings
SECRET_KEY=your_production_secret_key_here_make_it_very_long_and_random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=<green>{time:YYYY-MM-DD HH:mm:ss.SSS}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> | <level>{message}</level>

# WebSocket settings
MAX_CONNECTIONS=1000
PING_INTERVAL=20
PING_TIMEOUT=20

# Audio settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT=wav

# CORS settings
CORS_ORIGINS=["https://your-frontend-domain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"] 